<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de clientes</title>
    <link rel="stylesheet" href="./css/styles.css">
</head>

<body>

    <a href="/"><img class="logo" src="/img/happy_lifelogo.png" alt="logo"></a>

    <h1>Lista de Clientes</h1>
    <table border="1" width="auto">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Email</th>
            <th>WhatsApp</th>
            <th>CEP</th>
            <th>Logradouro</th>
            <th>Número</th>
            <th>Complemento</th>
            <th>Bairro</th>
            <th>Cidade</th>
            <th>UF</th>
            <th>Alterar</th>
        </tr>

        <% if (clientes.length> 0) { %>
            <% clientes.forEach(function(cliente) { %>
                <tr>
                    <td>
                        <%=cliente.codcliente %>
                    </td>
                    <td>
                        <%=cliente.nome %>
                    </td>
                    <td>
                        <%=cliente.sobrenome %>
                    </td>
                    <td>
                        <%=cliente.email %>
                    </td>
                    <td>
                        <%=cliente.whatsapp %>
                    </td>
                    <td>
                        <%=cliente.cep %>
                    </td>
                    <td>
                        <%=cliente.logradouro %>
                    </td>
                    <td>
                        <%=cliente.numero %>
                    </td>
                    <td>
                        <%=cliente.complemento %>
                    </td>
                    <td>
                        <%=cliente.bairro%>
                    </td>
                    <td>
                        <%=cliente.cidade %>
                    </td>
                    <td>
                        <%=cliente.uf %>
                    </td>


                    <td>
                        <a href="/update-clientes?codcliente=<%- cliente.codcliente %>">
                            <button class="botao">Alterar</button>
                        </a>
                    </td>
                </tr>
                <% }); %>

                    <% } else { %>
                        <tr>
                            <td colspan="14">
                                <h1>Não temos clientes cadastrados</h1>
                                <a href="/">
                                    <h3>Clique aqui para voltar para a tela de cadastro.</h3>
                                </a>
                            </td>
                        </tr>
                        <% } %>
    </table>

    <script src="listadecliente.js"></script>
</body>

</html>